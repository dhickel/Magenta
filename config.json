{
  "global": {
    "storage_path": "./data",
    "base_agent": "default",
    "stream_delay_ms": 10
  },
  "colors": {
    "default": {
      "error": 1,
      "warning": 3,
      "success": 2,
      "info": 6,
      "agent": 5,
      "prompt": 15,
      "security": 9,
      "command": 5
    }
  },
  "endpoints": {
    "local_ollama": {
      "type": "ollama",
      "url": "http://192.168.1.232:11434",
      "timeout_seconds": 360
    },
    "research_agent": {
      "type": "remote_agent",
      "url": "http://localhost:8080/agent",
      "timeout_seconds": 360,
      "auth_token": "bearer-token-placeholder",
      "capabilities": {
        "web_search": "true",
        "reasoning": "advanced"
      }
    }
  },
  "securities": {
    "default": {
      "approval_required_for": ["shell", "web_fetch", "file_write"],
      "always_allow_commands": ["ls", "pwd", "grep", "cat", "echo", "whoami"],
      "blocked_commands": ["rm", "mv", "shutdown", "reboot", ":(){ :|:& };:"]
    }
  },
  "models": {
    "Devstral2": { "model_name": "devstral2", "endpoint": "local_ollama", "max_tokens": 30000, "temperature": 0.2 },
    "GLM-4.7": { "model_name": "glf4.7f", "endpoint": "local_ollama", "max_tokens": 15000, "temperature": 0.4 }
  },
  "agents": {
    "default": {
      "system_prompt": "default_system",
      "model": "Devstral2",
      "security": "default",
      "colors": "default",
      "cursor": "magenta> ",
      "cursor_color": 5,
      "tools": ["shell", "files"]
    },
    "helpful": {
      "system_prompt": "helpful_system",
      "model": "GLM-4.7",
      "security": "default",
      "colors": "default",
      "cursor": "helpful> ",
      "cursor_color": 2,
      "tools": ["shell", "files"]
    }
  },
  "prompts" : {
    "default_system": "You are Magenta, a helpful AI assistant.",
    "helpful_system": "You are a very helpful and friendly AI assistant. Always be encouraging and positive!"
  }
}
